<div class="introduction">
  <h1></h1>
<form method="post" action="/transactions/<%= @transaction.id%>">
  <input type="hidden" name="_method" value="put">

  <div class="field-group">
    <label for="title-field" class="label">Transaction Title:</label>
    <div class="field">
      <input
        type="text"
        name="title"
        id="title-field"
        value="<%=@transaction.title%>"
      />
   </div>
  </div>

  <div class="field-group">
    <label for="price-field" class="label">Price:</label>
    <div class="field">
      <input
      type="number"
      name="price"
      id="price-field"
      value="<%=@transaction.price%>"
      />
    </div>
  </div>

  <div class="field-group">
    <label for="date-input-field" class="label">Date:</label>
    <div class="field">
      <input
        type="date"
        name="date_input"
        id="date-input-field"
        value="<%=@transaction.date_input%>"
      />
    </div>
  </div>

  <div class= "field-group">
    <label for= "category-selection" class="label">Category:</label>
    <div class="field">
      <select name="category_id" id="category_selection">
        <% @categories.each do |category| %>
        <option value= <%=category.id%> <%="selected" if @transaction.category_id = category.id %>><%=category.tag_name%></option>
        <% end %>
      </select>
    </div>

  <div class="field-group">
    <label for="shop-name-field" class="label">Shop:</label>
    <div class="field">
      <select name="shop_id" id="shop_selection">
        <% @shops.each do |shop| %>
        <option value= <%=shop.id%>> <%=shop.shop_name%></option>
        <% end %>
      </select>
    </div>
  </div>

  <button class="big-button button">Update</button>
</form>
</div>
