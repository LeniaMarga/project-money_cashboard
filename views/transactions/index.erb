<div class="introduction">
  <h1></h1>
  <h3>my expenses<h3>
<%= @sum %>
<br>
<hr>
<h3>transactions</h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Date</th>
      <th>Category</th>
      <th>Shop</th>
      <th>Edit</th>
    </tr>
  </thead>
  <br>
<% @transactions.each do |transaction| %>
  <div class="transaction-list">
    <tr>
    <td> <%= transaction.title %></td>
    <td> <%= transaction.price %></td>
    <td> <%= transaction.date_input %></td>
    <td> <%= transaction.category.tag_name %></td>
    <td> <%= transaction.shop.shop_name %> </td>
    <td><a class="body-link" href="/transactions/<%= transaction.id %>">Edit</a></td>
    </tr>
  </div>
<% end %>
</table>
<a class="button3" href="/transactions/new">Add new Transaction</a>
</div>
<div>
<form  method="get" action="/transactions/search">
  <input
    type="date"
    name="date_input"
    id="date_input"
    placeholder="DD/MM/YY"
    required
    class="tftextinput" name="q" size="21" maxlength="100"
  />
<button> search by date</button>
</form>
<div class="tfclear"></div>
</div>
